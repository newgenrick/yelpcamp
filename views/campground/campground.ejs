<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to our campgrounds!</h1>
        <p>Our hand-picked collection of campgrounds from all over the Globe because “Away is a place where it’s not about the money you spend.It’s about the moments you share.” </p>
        <div >
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add Campground</a>
        </div>
        </div>
    </header><br>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-lg-4 col-sm-6">
        
        <div class="thumbnail">
            <img src="<%= campground.image %>">
            <div class="caption">
                <h2><%= campground.name %></h2>
            </div>
            <p>
                <a href="/campgrounds/<%=campground._id%>" class="btn btn-md btn-primary">More Info</a>
            </p>
        </div>
    </div>
    <% }) %>
    </div>
</div>
<% include ../partials/footer %>