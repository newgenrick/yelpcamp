<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
    <h1>Add a new campground</h1><br>
    
    <div style="width:30%; margin: 27px auto;">
       
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="campground name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image source">
        </div>
        <div class="form-group">
            <textarea class="form-control" type="text" name="campground[desc]" placeholder="brief description"></textarea>
        </div>
        <div class="form-group">
            <button  class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
     <a href="/campgrounds">Get back to campgrounds</a>
    </div>
    </div>
</div>
<% include ../partials/footer %>