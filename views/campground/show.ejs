<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
               <li class="list-group-item active">info 1</li>
               <li class="list-group-item">info 2</li>
               <li class="list-group-item">info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">
                
                <img src="<%= campground.image %>" class="img-thumbnail img-responsive">
                <div class="caption-full">
                    <h4 class="pull-right">$9.99/night</h4>
                    <h4><a>This is <%= campground.name%> campground</a></h4>
                </div>
                
                <p>Description :<%= campground.desc%> </p>
                <p><em>submitted by:<%= campground.author.username%></em></p>
                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-md btn btn-success">Edit campground</a>
                    <form action="/campgrounds/<%=campground._id%>?_method=delete" method="POST" class="delete" >
                        <button class="btn btn-md btn-danger">Delete</button>
                    </form>
                <% } %>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%=campground._id%>/comment/new" class="btn btn-md btn-primary">Add Review</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                             <strong><%= comment.author.username%></strong>
                             <span class="pull-right">10 days Ago</span>
                             <p><%= comment.text%></p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                             <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comment/<%= comment._id %>/edit">Edit</a>
                             <form action="/campgrounds/<%=campground._id%>/comment/<%=comment._id%>/delete?_method=delete" method="POST" class="delete" >
                                 <button class="btn btn-xs btn-danger">Delete</button>
                             </form>
                         <% } %>
                        </div>
                    </div>
                <% }) ;%>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>


    
    
    
                
                  
                  
                
    