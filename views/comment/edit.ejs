<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
    <h1>Edit comment </h1><br>
    
    <div style="width:30%; margin: 27px auto;">
       
    <form action="/campgrounds/<%=campid %>/comment/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="Author name" value="<%=comment.author.username%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Add comment" value="<%=comment.text%>">
        </div>
        
        <div class="form-group">
            <button  class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
     <a href="/campgrounds">Get back to campgrounds</a>
    </div>
    </div>
</div>
<% include ../partials/footer %>