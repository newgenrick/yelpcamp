<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
    <h1>Add a new review for <%=campground.name%></h1><br>
    
    <div style="width:30%; margin: 27px auto;">
       
    <form action="/campgrounds/<%=campground._id %>/comment" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="Author name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Add comment">
        </div>
        
        <div class="form-group">
            <button  class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
     <a href="/campgrounds">Get back to campgrounds</a>
    </div>
    </div>
</div>
<% include ../partials/footer %>